{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Building Type",
  "type": "object",
  "properties": {
    "buildingtypes": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the building type"
          },
          "description": {
            "type": "string",
            "description": "A brief description of the building type"
          },
          "image": {
            "type": ["string", "null"],
            "description": "The URL of an image of the building type"
          }
        },
        "required": ["name", "description", "image"]
      }
    }
  },
  "required": ["buildings"]
}
